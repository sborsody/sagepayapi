/**
 * Returns HTML for the Sage Pay Form order form
 *
 * @param $form
 *   An associative array containing the form
 *
 * @ingroup themeable
 */
function theme_sagepayapi_form_order_form($form) {
  $output = '';
  // Page one of the form
  if ($form['billing']) {
    $output .= '<p>';
    switch ($form['order']['Description']['#value']) {
      case t('Program Deposit'):
        $output .= t("After entering your billing information below you will be automatically directed to our secure online payment page.");
        break;
      case t('Program Balance (Enter amount below)'):
        $output .= t("After entering your billing information below you will be automatically directed to our secure online payment page.");
        break;
      case t('Internship Application'):
      default:
        $output .= t("Please be aware that in order to complete your online application process you need to submit the required processing fee (&pound;50/US$75/AU$100/&#8364;65).  After entering your billing information below you will be automatically directed to our secure online payment page.");
        break;
    }
    $output .= '</p>';
    $output .= '<h3>' . t('Please enter your billing information.') . '</h3>';
  }
  // Page two of the form
  if ($form['Crypt']) {
    $output .= '<h3>';
    $output .= t('Please review your billing details.');
    $output .= '</h3>';
    $output .= '<p>' . t('You will be taken to a secure server to enter your payment information on the next screen.  If you need to go back and edit your details, please hit the back button on your browser.') . '</p>';

  }
  $output .= drupal_render($form);
  return $output;
}

/**
